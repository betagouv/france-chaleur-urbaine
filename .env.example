# ============================================
# France Chaleur Urbaine - Configuration
# ============================================

# --------------------------------------------
# APPLICATION
# --------------------------------------------

# Environnement Node.js (development, production, test)
NODE_ENV=development

# URL publique du site (utilisée pour les liens, OG tags, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# URL du formulaire de feedback utilisateur
NEXT_PUBLIC_FEEDBACK_URL=https://example.com/feedback

# Port de l'application (défaut: 3000)
PORT=3000

# Mode review app (Scalingo)
IS_REVIEW_APP=false

# Mode CI
CI=false
GITHUB_CI=false

# --------------------------------------------
# AUTHENTIFICATION & SÉCURITÉ
# --------------------------------------------

# NextAuth.js - Secret de session (générer avec: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth.js - URL de l'application
NEXTAUTH_URL=http://localhost:3000

# --------------------------------------------
# BASE DE DONNÉES
# --------------------------------------------

# PostgreSQL - URL de connexion principale
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/france_chaleur_urbaine

# URLs alternatives pour dev et prod
DATABASE_URL_DEV=postgresql://postgres:postgres@localhost:5432/fcu_dev
DATABASE_URL_PROD=postgresql://postgres:postgres@localhost:5432/fcu_prod

# Logging des requêtes SQL (true/false)
LOG_SQL_QUERIES=false

# Affichage simple des requêtes (non JSON)
LOG_SQL_QUERIES_PRETTY=false

# --------------------------------------------
# AIRTABLE
# --------------------------------------------

# Clé API Airtable (récupérer sur https://airtable.com/account)
AIRTABLE_KEY_API=keyXXXXXXXXXXXXXX

# ID de la base Airtable
AIRTABLE_BASE=appXXXXXXXXXXXXXX

# --------------------------------------------
# EMAIL (SMTP)
# --------------------------------------------

# Serveur SMTP
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false

# Identifiants SMTP
MAIL_USER=your-email@example.com
MAIL_PASS=your-smtp-password

# Adresses par défaut
MAIL_FROM=France Chaleur Urbaine <france-chaleur-urbaine@applications.developpement-durable.gouv.fr>
MAIL_REPLYTO=France Chaleur Urbaine <france-chaleur-urbaine@developpement-durable.gouv.fr>


# --------------------------------------------
# ANALYTICS & TRACKING
# --------------------------------------------

# Matomo
NEXT_PUBLIC_MATOMO_URL=https://stats.example.com
NEXT_PUBLIC_MATOMO_SITE_ID=1
MATOMO_TOKEN=your-matomo-api-token

# Google Analytics/Ads (plusieurs IDs séparés par des virgules)
NEXT_PUBLIC_GOOGLE_TAG_ID=G-XXXXXXXXXX,AW-XXXXXXXXXX

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=1234567
NEXT_PUBLIC_HOTJAR_SV=6

# LinkedIn
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=1234567

# --------------------------------------------
# APIS EXTERNES
# --------------------------------------------

# API Adresse (BAN)
NEXT_PUBLIC_BAN_API_BASE_URL=https://data.geopf.fr/geocodage/

# data.gouv.fr
DATA_GOUV_FR_API_URL=https://www.data.gouv.fr/api/1
DATA_GOUV_FR_API_KEY=your-datagouv-api-key
DATA_GOUV_FR_DATASET_ID=your-dataset-id

# Pipedrive CRM
PIPEDRIVE_API_KEY=your-pipedrive-api-key
PIPEDRIVE_BASE_URL=https://api.pipedrive.com/v1

# --------------------------------------------
# MONITORING & ERREURS
# --------------------------------------------

# Sentry - DSN pour le tracking d'erreurs
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Désactiver l'avertissement Sentry
SENTRY_DISABLED_IGNORE_WARNING=false
SENTRY_IGNORE_API_RESOLUTION_ERROR=1

# --------------------------------------------
# FEATURE FLAGS
# --------------------------------------------

# Activer le widget comparateur
NEXT_PUBLIC_FLAG_ENABLE_COMPARATEUR_WIDGET=false

# --------------------------------------------
# LOGGING & DEBUG
# --------------------------------------------

# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# Formater les logs en mode "pretty" (true/false)
LOGS_PRETTY=true

# Coloriser les logs
COLORIZE_LOGS=true

# Logger les IPs des requêtes (attention RGPD)
LOG_REQUEST_IP=false

# Logger les IDs utilisateurs
LOG_REQUEST_USER=false

# Mode debug API
API_DEBUG_MODE=0

# Mode dry-run pour les CLI (aucune modification réelle)
DRY_RUN=true

# --------------------------------------------
# TRAITEMENT GEOSPATIAL
# --------------------------------------------

# Utiliser Docker pour les commandes GIS (ogr2ogr, tippecanoe)
USE_DOCKER_GEO_COMMANDS=false

# Afficher la sortie de Tippecanoe dans les logs
PRINT_TIPPECANOE_OUTPUT_TO_LOGS=false

# Désactiver le cache des tuiles
DISABLE_TILES_CACHE=false

# --------------------------------------------
# SCHEDULER & CRON JOBS
# --------------------------------------------

# Activer les tâches cron planifiées
CLOCK_CRONS_ENABLE=true

# Activer le processeur de jobs
CLOCK_JOBS_PROCESSOR_ENABLE=true

# --------------------------------------------
# DIVERS
# --------------------------------------------

# URL de la documentation Publicodes
NEXT_PUBLIC_PUBLICODES_DOCUMENTATION_URL=https://betagouv.github.io/france-chaleur-urbaine-publicodes

# Désactiver les logs d'import dotenv
DOTENV_CONFIG_QUIET=true

# Autoriser unsafe-eval dans la CSP (développement uniquement)
UNSAFE_EVAL=false

# --------------------------------------------
# DÉVELOPPEMENT & TESTS
# --------------------------------------------

# Simuler la création d'utilisateurs
NEXT_PUBLIC_MOCK_USER_CREATION=false

# --------------------------------------------
# MCP & OUTILS DE DÉVELOPPEMENT
# --------------------------------------------

# Context7 API (pour MCP)
CONTEXT7_API_KEY=your-context7-api-key

# GitHub Personal Access Token (pour MCP)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-pat
