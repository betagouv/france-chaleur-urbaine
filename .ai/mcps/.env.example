# MCP Server Environment Variables
# Copy this file to .env.local and fill in your actual values

# Airtable
AIRTABLE_API_KEY=

# GitHub
GITHUB_PERSONAL_ACCESS_TOKEN=

# PostgreSQL
POSTGRES_CONNECTION_STRING=

# Trello (Get credentials at https://trello.com/app-key)
TRELLO_API_KEY=
TRELLO_TOKEN=

# Make.com (Get from your Make profile)
MAKE_API_KEY=
MAKE_ZONE=eu2.make.com
MAKE_TEAM=

# Notion (Create integration at https://www.notion.so/my-integrations)
NOTION_TOKEN=

# Google Calendar (Composio OAuth - from Google Cloud Console)
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/auth/google/calendar/callback

# Stripe (Get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Google Drive (OAuth credentials from Google Cloud Console)
GDRIVE_CLIENT_ID=
GDRIVE_CLIENT_SECRET=
GDRIVE_CREDS_DIR=/path/to/credentials

# Gmail (Composio OAuth - from Google Cloud Console)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# Context7 (Optional - get from https://context7.com)
CONTEXT7_API_KEY=
