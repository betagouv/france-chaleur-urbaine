{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cli/*": ["scripts/*"],
      "@root/*": ["*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "knexfile.ts", "scripts/**/*.ts", "**/*.svgr"],
  "exclude": ["node_modules", "__tests__", "*.backUp", "**/*.backUp/*", ".next"]
}
