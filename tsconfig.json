{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "removeComments": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@helpers": ["src/helpers"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@data": ["src/data"],
      "@data/*": ["src/data/*"],
      "@constants": ["src/constants"],
      "@pages/*": ["src/pages/*"],
      "@libs/*": ["src/libs/*"],
      "@styles/*": ["src/styles/*"],
      "@core/*": ["src/core/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "knexfile.ts",
    "scripts/addUser.ts"
  ],
  "exclude": ["node_modules", "__tests__", "*.backUp", "**/*.backUp/*"]
}
